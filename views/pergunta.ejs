<%- include("partials/header") %>
<body>
    <%- include("partials/navbar") %>
    
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/salvarresposta">
            <h3>Resposta</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="resposta"></textarea>
            <br>
            <input type="hidden" name="id_pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <br>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <%= resposta.resposta %>
                    
                </div>
            </div>
            <br>
        <% }) %>
    </div>

</body>
<%- include("partials/footer") %>